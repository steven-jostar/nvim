let mapleader = ' '

" About files.
nmap <Leader>w :w<CR>
nmap <Leader>q :q<CR>
nmap <Leader>s :wq<CR>

" About buffers.
nmap ]b :bnext<CR>
nmap [b :bprev<CR>
nmap -b :bdelete<CR>

" About windows.
nmap <C-h> <C-w><C-h>
nmap <C-j> <C-w><C-j>
nmap <C-k> <C-w><C-k>
nmap <C-l> <C-w><C-l>
nmap <Leader>x :x<CR>
